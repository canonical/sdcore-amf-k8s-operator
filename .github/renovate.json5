{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':disableRateLimiting',
    ':noUnscheduledUpdates',
    ':semanticCommits',
  ],
  automerge: true,
  automergeStrategy: 'squash',
  automergeType: 'pr',
  platformAutomerge: true,
  schedule: [
    'after 1am and before 3am on monday',
  ],
  lockFileMaintenance: {
    enabled: true,
    schedule: [
      'after 1am and before 3am on wednesday',
    ],
  },
  timezone: 'Etc/UTC',
  enabledManagers: [
    'pep621',
    'github-actions',
    'terraform',
  ],
  packageRules: [
    {
      matchBaseBranches: [
        'main',
        'v*',
      ],
      matchManagers: [
        'pep621',
      ],

      rangeStrategy: 'bump',
      groupName: 'Python dependencies',
    },
    {
      matchPackageNames: [
        'pytest-asyncio',
        'python'
      ],
      matchUpdateTypes: [
        'minor',
      ],
      enabled: false,
    },
    {
      matchBaseBranches: [
        'main',
        'v*',
      ],
      matchManagers: [
        'github-actions',
      ],
      groupName: 'GitHub actions',
    },
    {
      matchBaseBranches: [
        'main',
        'v*',
      ],
      matchManagers: [
        'terraform',
      ],
      groupName: 'Terraform',
    },
  ],
}
